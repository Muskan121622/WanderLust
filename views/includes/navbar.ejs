<style>
  /* Base Navbar Styling */
  .navbar {
    background: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(10px) !important;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08) !important;
    padding: 0.75rem 0 !important;
    transition: all 0.3s ease !important;
  }

  [data-theme="dark"] .navbar {
    background: rgba(30, 30, 30, 0.95) !important;
    border-bottom-color: rgba(255, 255, 255, 0.1) !important;
  }

  /* Brand Styling */
  .navbar-brand {
    font-size: 1.5rem !important;
    font-weight: 700 !important;
    color: #fe424d !important;
    text-decoration: none !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    transition: transform 0.2s ease !important;
  }

  .navbar-brand:hover {
    transform: scale(1.02) !important;
    color: #fe424d !important;
  }

  .navbar-brand i {
    font-size: 1.4rem !important;
  }

  /* Primary Navigation */
  .navbar-nav .nav-link {
    font-weight: 500 !important;
    color: var(--text-primary, #2d3748) !important;
    padding: 0.5rem 1rem !important;
    border-radius: 8px !important;
    transition: all 0.2s ease !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
  }

  .navbar-nav .nav-link:hover {
    background-color: rgba(254, 66, 77, 0.1) !important;
    color: #fe424d !important;
  }

  /* Search Bar Redesign */
  .search-container {
    position: relative !important;
    max-width: 400px !important;
    width: 100% !important;
  }

  .search-input {
    width: 100% !important;
    padding: 0.6rem 1rem 0.6rem 2.5rem !important;
    border: 2px solid #e2e8f0 !important;
    border-radius: 25px !important;
    font-size: 0.95rem !important;
    background: white !important;
    transition: all 0.2s ease !important;
  }

  .search-input:focus {
    outline: none !important;
    border-color: #fe424d !important;
    box-shadow: 0 0 0 3px rgba(254, 66, 77, 0.1) !important;
  }

  [data-theme="dark"] .search-input {
    background: var(--bg-secondary, #2d3748) !important;
    border-color: var(--border-color, #4a5568) !important;
    color: var(--text-primary, white) !important;
  }

  .search-icon {
    position: absolute !important;
    left: 0.8rem !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    color: #6b7280 !important;
    z-index: 10 !important;
  }

  .search-btn {
    position: absolute !important;
    right: 4px !important;
    top: 4px !important;
    bottom: 4px !important;
    background: #fe424d !important;
    color: white !important;
    border: none !important;
    border-radius: 20px !important;
    padding: 0 1rem !important;
    font-size: 0.85rem !important;
    font-weight: 500 !important;
    transition: all 0.2s ease !important;
  }

  .search-btn:hover {
    background: #e53e3e !important;
    transform: scale(1.02) !important;
  }

  /* Action Buttons */
  .action-buttons {
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
  }

  .btn-outline-primary {
    border: 2px solid #fe424d !important;
    color: #fe424d !important;
    background: transparent !important;
    padding: 0.4rem 1rem !important;
    border-radius: 8px !important;
    font-weight: 500 !important;
    transition: all 0.2s ease !important;
  }

  .btn-outline-primary:hover {
    background: #fe424d !important;
    color: white !important;
  }

  .btn-primary {
    background: #fe424d !important;
    border: 2px solid #fe424d !important;
    color: white !important;
    padding: 0.4rem 1rem !important;
    border-radius: 8px !important;
    font-weight: 500 !important;
    transition: all 0.2s ease !important;
  }

  .btn-primary:hover {
    background: #e53e3e !important;
    border-color: #e53e3e !important;
  }

  /* Profile Dropdown */
  .profile-dropdown .dropdown-toggle {
    background: rgba(254, 66, 77, 0.1) !important;
    border: 2px solid rgba(254, 66, 77, 0.2) !important;
    color: #fe424d !important;
    border-radius: 50px !important;
    padding: 0.4rem 1rem !important;
    font-weight: 500 !important;
  }

  .profile-dropdown .dropdown-toggle:hover {
    background: rgba(254, 66, 77, 0.15) !important;
  }

  /* Utility Controls */
  .utility-controls {
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
  }

  .theme-toggle {
    background: none !important;
    border: 2px solid #e2e8f0 !important;
    color: var(--text-primary, #4a5568) !important;
    width: 40px !important;
    height: 40px !important;
    border-radius: 50% !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: all 0.2s ease !important;
  }

  .theme-toggle:hover {
    border-color: #fe424d !important;
    color: #fe424d !important;
  }

  .language-dropdown .dropdown-toggle {
    background: none !important;
    border: 2px solid #e2e8f0 !important;
    color: var(--text-primary, #4a5568) !important;
    border-radius: 8px !important;
    padding: 0.4rem 0.75rem !important;
    font-size: 0.9rem !important;
  }

  .language-dropdown .dropdown-toggle:hover {
    border-color: #fe424d !important;
    color: #fe424d !important;
  }

  /* Mobile Responsiveness */
  @media (max-width: 767px) {
    .navbar-collapse {
      background: white !important;
      border: 1px solid #e2e8f0 !important;
      border-radius: 12px !important;
      margin-top: 1rem !important;
      padding: 1.5rem !important;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
    }

    [data-theme="dark"] .navbar-collapse {
      background: var(--bg-secondary, #2d3748) !important;
      border-color: var(--border-color, #4a5568) !important;
    }

    .search-container {
      max-width: 100% !important;
      margin: 1rem 0 !important;
    }

    .action-buttons {
      flex-direction: column !important;
      width: 100% !important;
      gap: 0.5rem !important;
      margin-top: 1rem !important;
    }

    .action-buttons .btn,
    .action-buttons .dropdown {
      width: 100% !important;
    }

    .action-buttons .btn,
    .action-buttons .dropdown .btn {
      width: 100% !important;
      justify-content: center !important;
    }

    .utility-controls {
      justify-content: center !important;
      margin-top: 1rem !important;
      padding-top: 1rem !important;
      border-top: 1px solid #e2e8f0 !important;
    }

    .navbar-nav {
      margin-bottom: 1rem !important;
    }

    .navbar-nav .nav-link {
      padding: 0.75rem 1rem !important;
      margin: 0.25rem 0 !important;
    }
  }

  .mobile-icon {
    display: none;
  }

  /* Desktop view - hide mobile icons */
  @media (min-width: 768px) {
    .mobile-icon {
      display: none !important;
    }
  }

  /* Search suggestions styling */
  .search-form-container {
    position: relative;
  }

  .search-suggestions {
    position: absolute !important;
    top: calc(100% + 8px) !important;
    left: 0 !important;
    right: 0 !important;
    z-index: 1050 !important;
    max-height: 300px !important;
    overflow-y: auto !important;
    border: 1px solid #e2e8f0 !important;
    border-radius: 12px !important;
    background: white !important;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
    display: none !important;
  }

  .search-suggestions.show {
    display: block !important;
  }

  .search-suggestion-item {
    padding: 0.75rem 1rem !important;
    cursor: pointer !important;
    border-bottom: 1px solid #f7fafc !important;
    transition: background-color 0.2s ease !important;
  }

  .search-suggestion-item:hover {
    background-color: rgba(254, 66, 77, 0.05) !important;
  }

  .search-suggestion-item:last-child {
    border-bottom: none !important;
  }

  /* Dropdown Improvements */
  .dropdown-menu {
    border: none !important;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
    border-radius: 12px !important;
    padding: 0.5rem 0 !important;
    margin-top: 0.5rem !important;
  }

  .dropdown-item {
    padding: 0.6rem 1rem !important;
    font-weight: 500 !important;
    transition: all 0.2s ease !important;
  }

  .dropdown-item:hover {
    background-color: rgba(254, 66, 77, 0.1) !important;
    color: #fe424d !important;
  }
  
  /* Language dropdown styling */
  .dropdown-item.active {
    background-color: #fe424d !important;
    color: white !important;
  }

  /* Animation for mobile toggle */
  .navbar-toggler {
    border: none !important;
    padding: 0.5rem !important;
  }

  .navbar-toggler:focus {
    box-shadow: none !important;
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand mt-1 d-flex align-items-center" href="/listings">
      <i class="fa-regular fa-compass me-2"></i>
      <span class="fw-bold"><%= __('wanderlust') %></span>
    </a>

    <!-- Mobile Toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
      aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarContent">
      <!-- Primary Navigation -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings">
            <i class="fa-regular fa-compass"></i>
            <%= __('all_listings') %>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listings/about">
            <i class="fa-solid fa-info-circle"></i>
            About
