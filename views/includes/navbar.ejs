<% } %>
      </div>

      <div class="d-flex justify-content-center">
        <button id="theme-toggle" class="btn theme-toggle-btn">
          <i id="theme-icon" class="fa-solid fa-moon theme-icon"></i>
        </button>
      </div>

      <style>
        .theme-toggle-btn {
          background: var(--glass-bg);
          border: 2px solid var(--glass-border);
          border-radius: 50%;
          width: 50px;
          height: 50px;
          display: flex;
          align-items: center;
          justify-content: center;
          backdrop-filter: blur(15px);
          transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
          box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
          position: relative;
          overflow: hidden;
        }

        .theme-toggle-btn:hover {
          transform: scale(1.1) rotate(15deg);
          border-color: var(--accent-color);
          box-shadow: 0 8px 25px rgba(254, 66, 77, 0.3);
        }

        .theme-toggle-btn:active {
          transform: scale(0.95);
        }

        .theme-icon {
          color: var(--text-primary);
          font-size: 1.2rem;
          transition: all 0.3s ease;
        }

        .theme-toggle-btn:hover .theme-icon {
          color: var(--accent-color);
          transform: scale(1.2);
        }

        /* Dark theme icon animation */
        [data-theme="dark"] .theme-icon {
          animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
          0% { text-shadow: 0 0 5px rgba(255, 255, 255, 0.5); }
          100% { text-shadow: 0 0 20px rgba(255, 255, 255, 0.8); }
        }

        .theme-toggle-btn::before {
          content: '';
          position: absolute;
          top: 50%;
          left: 50%;
          width: 0;
          height: 0;
          background: radial-gradient(circle, rgba(254, 66, 77, 0.2) 0%, transparent 70%);
          border-radius: 50%;
          transition: all 0.3s ease;
          transform: translate(-50%, -50%);
        }

        .theme-toggle-btn:hover::before {
          width: 100px;
          height: 100px;
        }
      </style>
    </div>
  </div>
</nav>