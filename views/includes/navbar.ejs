    <a class="nav-link" href="/logout"><b>Log out</b></a>
    
<% } %>
      </div>

      <div class="d-flex justify-content-center">
        <button id="theme-toggle" class="btn btn-outline-secondary">
          <i id="theme-icon" class="fa-solid fa-moon"></i>
        </button>
      </div>
    </div>
  </div>
</nav>