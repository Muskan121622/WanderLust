          <a class="btn btn-primary" href="/signup">
            <i class="fa-solid fa-user-plus me-1"></i>
            <%= __('signup') %>
          </a>
          <% } else { %>
            <div class="profile-dropdown dropdown">
              <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
