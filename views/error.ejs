<% layout("/layouts/boilerplate") %>

    <div class=" container col-12 col-md-8 offset-md-2 mt-3">
        <div class=" error-card row justify-content-center align-items-center ">
            <div class="col-lg-8 col-md-10 text-center pt-2">
                <!-- 404 Icon -->
                <div class="mb-4">
                    <i class="fas fa-map-marked-alt " style="font-size: 8rem; opacity: 0.7;"></i>
                </div>

                <!-- Main 404 Message -->
                <h1 class="display-1 fw-bold  mb-3">404</h1>
                <h2 class="h3 mb-4 ">Oops! You've wandered off the beaten path</h2>

                <!-- Travel-themed message -->
                <div class="mb-4">
                    <p class="lead mb-3">
                        It looks like the destination you're looking for doesn't exist on our map.
                        Don't worry, even the best explorers sometimes take a wrong turn!
                    </p>
                    <div class="d-flex ms-3 justify-content-center ">
                        <i class="fas fa-compass me-2 mb-2"></i>
                        <p class="text-start">
                            Let's get you back on track to discover amazing places.
                        </p>
                    </div>
                    
                </div>


                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mb-4">
                    <a href="/listings" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-home me-2"></i>
                        Explore Listings
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-light btn-lg px-4">
                        <i class="fas fa-arrow-left me-2"></i>
                        Go Back
                    </button>
                </div>


                <div class="mt-5">
                    <p class="small text-muted">
                        <i class="fas fa-question-circle me-1"></i>
                        Need help? Try searching for destinations or
                        <a href="/listings" class="text-decoration-none">browse our listings</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom styles for 404 page -->
    <style>
        .container {
            color: var(--text-primary);
        }
        /* .min-vh-100 {
            min-height: calc(100vh - 200px);
            /* Adjust for navbar and footer */
        /* } */ 
        .btn-lg {

            padding: 12px 30px;
            font-weight: 500;
        }
        h2{
            color: var(--text-primary);
        }
        h1,.fa-map-marked-alt{
            color: var(--accent-color);
        }
        p{
            color: var(--text-muted);
        }
        .display-1 {
            font-size: 6rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        @media (max-width: 768px) {
            .display-1 {
                font-size: 4rem;
            }

            .fas.fa-map-marked-alt {
                font-size: 5rem !important;
            }
        }

        .btn:hover {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>