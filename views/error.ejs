<% layout("/layouts/boilerplate") %>

<style>
    .error-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        position: relative;
        overflow: hidden;
        padding: 2rem 0;
    }
    
    .error-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px) saturate(180%);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 3rem;
        text-align: center;
        box-shadow: var(--glass-shadow);
        transition: var(--transition-smooth);
        position: relative;
        z-index: 2;
        max-width: 900px;
        margin: 0 auto;
    }
    
    .error-number {
        font-size: 8rem;
        font-weight: 900;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin-bottom: 1rem;
        animation: bounce 2s ease-in-out infinite;
    }
    
    .error-icon {
        font-size: 4rem;
        color: var(--accent-color);
        margin-bottom: 2rem;
        animation: float 3s ease-in-out infinite;
        opacity: 0.8;
    }
    
    .search-suggestions {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 1.5rem;
        margin: 2rem 0;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .suggestion-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        margin: 0.5rem 0;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        text-decoration: none;
        color: var(--text-primary);
        transition: var(--transition-smooth);
        border: 1px solid transparent;
    }
    
    .suggestion-item:hover {
        background: rgba(254, 66, 77, 0.1);
        border-color: var(--accent-color);
        transform: translateX(10px);
        color: var(--text-primary);
    }
    
    .suggestion-icon {
        width: 40px;
        height: 40px;
        background: var(--accent-gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        color: white;
        font-size: 1.1rem;
    }
    
    .floating-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }
    
    .floating-element {
        position: absolute;
        opacity: 0.1;
        animation: floatAround 15s linear infinite;
        color: var(--accent-color);
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
        margin: 2rem 0;
    }
    
    .stat-item {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: var(--transition-smooth);
    }
    
    .stat-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }
    
    .stat-number {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--accent-color);
        display: block;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 2rem;
    }
    
    .btn-modern-error {
        background: var(--accent-gradient);
        border: none;
        border-radius: 50px;
        padding: 12px 24px;
        font-weight: 600;
        color: white;
        transition: var(--transition-bounce);
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.2);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-modern-error:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(254, 66, 77, 0.4);
        color: white;
        text-decoration: none;
    }
    
    .btn-outline-modern {
        background: transparent;
        border: 2px solid var(--accent-color);
        border-radius: 50px;
        padding: 10px 22px;
        font-weight: 600;
        color: var(--accent-color);
        transition: var(--transition-smooth);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-outline-modern:hover {
        background: var(--accent-color);
        color: white;
        transform: translateY(-2px);
        text-decoration: none;
    }
    
    .help-section {
        margin-top: 2rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-20px); }
        60% { transform: translateY(-10px); }
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(10deg); }
    }
    
    @keyframes floatAround {
        0% { transform: translateY(0px) translateX(0px) rotate(0deg); }
        25% { transform: translateY(-50px) translateX(30px) rotate(90deg); }
        50% { transform: translateY(-20px) translateX(-30px) rotate(180deg); }
        75% { transform: translateY(-40px) translateX(20px) rotate(270deg); }
        100% { transform: translateY(0px) translateX(0px) rotate(360deg); }
    }
    
    .pulse-element {
        animation: pulse 2s ease-in-out infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.1; }
    }
    
    @media (max-width: 768px) {
        .error-number { font-size: 6rem; }
        .error-card { 
            padding: 2rem 1.5rem; 
            margin: 1rem;
        }
        .stats-grid { grid-template-columns: repeat(2, 1fr); }
        .action-buttons { flex-direction: column; align-items: center; }
        .btn-modern-error, .btn-outline-modern { width: 200px; justify-content: center; }
    }
    
    @media (max-width: 480px) {
        .error-number { font-size: 4.5rem; }
        .error-icon { font-size: 3rem; }
        .stats-grid { grid-template-columns: 1fr; }
    }
</style>

<div class="error-container">
    <!-- Floating Background Elements -->
    <div class="floating-elements">
        <i class="fas fa-plane floating-element" style="top: 10%; left: 10%; font-size: 2rem; animation-delay: 0s;"></i>
        <i class="fas fa-map floating-element pulse-element" style="top: 20%; right: 15%; font-size: 1.5rem; animation-delay: 2s;"></i>
        <i class="fas fa-compass floating-element" style="bottom: 20%; left: 20%; font-size: 2.5rem; animation-delay: 4s;"></i>
        <i class="fas fa-globe floating-element pulse-element" style="bottom: 30%; right: 10%; font-size: 1.8rem; animation-delay: 6s;"></i>
        <i class="fas fa-mountain floating-element" style="top: 50%; left: 5%; font-size: 2.2rem; animation-delay: 8s;"></i>
        <i class="fas fa-camera floating-element" style="top: 60%; right: 5%; font-size: 1.6rem; animation-delay: 10s;"></i>
        <i class="fas fa-suitcase floating-element pulse-element" style="bottom: 10%; left: 15%; font-size: 1.9rem; animation-delay: 12s;"></i>
    </div>

    <div class="container">
        <div class="error-card">
            <!-- Error Icon -->
            <div class="error-icon">
                <i class="fas fa-map-marked-alt"></i>
            </div>
            
            <!-- Error Number -->
            <div class="error-number">404</div>
            
            <!-- Main Message -->
            <h2 class="h3 mb-3" style="color: var(--text-primary);">Oops! You've wandered off the beaten path</h2>
            <p class="lead mb-4" style="color: var(--text-secondary);">
                It looks like the destination you're looking for doesn't exist on our map.
                Don't worry, even the best explorers sometimes take a wrong turn!
            </p>
            
            <!-- Quick Stats -->
            <div class="stats-grid">
                <div class="stat-item">
                    <span class="stat-number">1000+</span>
                    <small style="color: var(--text-muted);">Destinations</small>
                </div>
                <div class="stat-item">
                    <span class="stat-number">50+</span>
                    <small style="color: var(--text-muted);">Countries</small>
                </div>
                <div class="stat-item">
                    <span class="stat-number">24/7</span>
                    <small style="color: var(--text-muted);">Support</small>
                </div>
                <div class="stat-item">
                    <span class="stat-number">â˜… 4.8</span>
                    <small style="color: var(--text-muted);">Rating</small>
                </div>
            </div>
            
            <!-- Search Suggestions -->
            <div class="search-suggestions">
                <h5 class="mb-3" style="color: var(--text-primary);">
                    <i class="fas fa-compass me-2"></i>
                    Let's get you back on track
                </h5>
                
                <div class="row">
                    <div class="col-md-6">
                        <a href="/listings" class="suggestion-item">
                            <div class="suggestion-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="text-start">
                                <strong>All Listings</strong>
                                <br><small style="color: var(--text-muted);">Explore amazing places</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/listings?category=Trending" class="suggestion-item">
                            <div class="suggestion-icon">
                                <i class="fas fa-fire"></i>
                            </div>
                            <div class="text-start">
                                <strong>Trending</strong>
                                <br><small style="color: var(--text-muted);">Popular destinations</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/listings?category=Amazing%20pool" class="suggestion-item">
                            <div class="suggestion-icon">
                                <i class="fas fa-swimming-pool"></i>
                            </div>
                            <div class="text-start">
                                <strong>Amazing Pools</strong>
                                <br><small style="color: var(--text-muted);">Luxury stays</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/about" class="suggestion-item">
                            <div class="suggestion-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="text-start">
                                <strong>About Us</strong>
                                <br><small style="color: var(--text-muted);">Learn more</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="/listings" class="btn-modern-error">
                    <i class="fas fa-home me-2"></i>
                    Explore Listings
                </a>
                <button onclick="history.back()" class="btn-outline-modern">
                    <i class="fas fa-arrow-left me-2"></i>
                    Go Back
                </button>
            </div>
            
            <!-- Help Section -->
            <div class="help-section">
                <p class="small mb-2" style="color: var(--text-muted);">
                    <i class="fas fa-lightbulb me-1"></i>
                    <strong>Quick Tips:</strong>
                </p>
                <p class="small mb-0" style="color: var(--text-muted);">
                    Try searching for destinations, check our trending locations, or 
                    <a href="/listings" style="color: var(--accent-color); text-decoration: none;">browse all listings</a> 
                    to find your perfect getaway.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    // Add some interactive elements
    document.addEventListener('DOMContentLoaded', function() {
        // Add click tracking for suggestions
        const suggestions = document.querySelectorAll('.suggestion-item');
        suggestions.forEach(item => {
            item.addEventListener('click', function() {
                // Add a subtle pulse effect on click
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });
        
        // Add keyboard navigation for buttons
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                const focusedElement = document.activeElement;
                if (focusedElement.classList.contains('suggestion-item')) {
                    focusedElement.click();
                }
            }
        });
        
        // Add some dynamic stats (optional enhancement)
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach((stat, index) => {
            stat.style.animationDelay = `${index * 0.2}s`;
            stat.classList.add('pulse');
        });
    });
</script>