<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">üìß Newsletter Management</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Subscribe Section -->
                        <div class="col-md-6">
                            <h5 class="text-success">‚úÖ Subscribe</h5>
                            <p class="text-muted">Join thousands of travelers who receive our weekly travel tips, destination guides, and exclusive deals.</p>
                            
                            <form action="/newsletter/subscribe" method="POST" class="mb-4">
                                <div class="mb-3">
                                    <label for="subscribeEmail" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="subscribeEmail" name="email" placeholder="Enter your email" required>
                                    <input type="hidden" name="source" value="newsletter-page">
                                </div>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-envelope"></i> Subscribe Now
                                </button>
                            </form>
                            
                            <div class="alert alert-info">
                                <small>
                                    <i class="fas fa-info-circle"></i>
                                    We respect your privacy. No spam, unsubscribe anytime.
                                </small>
                            </div>
                        </div>

                        <!-- Unsubscribe Section -->
                        <div class="col-md-6 border-start">
                            <h5 class="text-warning">üö´ Unsubscribe</h5>
                            <p class="text-muted">We're sorry to see you go! You can unsubscribe from our newsletter at any time.</p>
                            
                            <form action="/newsletter/unsubscribe" method="POST">
                                <div class="mb-3">
                                    <label for="unsubscribeEmail" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="unsubscribeEmail" name="email" placeholder="Enter your email" required>
                                </div>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-times-circle"></i> Unsubscribe
                                </button>
                            </form>
                            
                            <div class="alert alert-warning mt-3">
                                <small>
                                    <i class="fas fa-exclamation-triangle"></i>
                                    You'll miss out on exclusive travel deals and tips!
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- What You'll Get Section -->
            <div class="card shadow mt-4">
                <div class="card-body">
                    <h5 class="card-title text-center">üéÅ What You'll Get</h5>
                    <div class="row text-center mt-4">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-map-marked-alt fa-3x text-primary"></i>
                                <h6 class="mt-2">Travel Guides</h6>
                                <small class="text-muted">Detailed destination guides and hidden gems</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-percent fa-3x text-success"></i>
                                <h6 class="mt-2">Exclusive Deals</h6>
                                <small class="text-muted">Special discounts and early bird offers</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-lightbulb fa-3x text-warning"></i>
                                <h6 class="mt-2">Travel Tips</h6>
                                <small class="text-muted">Expert advice and pro travel hacks</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-calendar-alt fa-3x text-info"></i>
                                <h6 class="mt-2">Weekly Updates</h6>
                                <small class="text-muted">Fresh content delivered every week</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.newsletter-form {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 2rem;
    border-radius: 15px;
    color: white;
}

.newsletter-form .form-control {
    border: none;
    border-radius: 25px;
    padding: 12px 20px;
    margin-bottom: 1rem;
}

.newsletter-form .btn {
    border-radius: 25px;
    padding: 12px 30px;
    font-weight: 600;
    border: 2px solid white;
    background: transparent;
    color: white;
    transition: all 0.3s ease;
}

.newsletter-form .btn:hover {
    background: white;
    color: #667eea;
    transform: translateY(-2px);
}

.card {
    border: none;
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
}

.fa-3x {
    margin-bottom: 1rem;
}

@media (max-width: 768px) {
    .border-start {
        border-left: none !important;
        border-top: 1px solid #dee2e6;
        padding-top: 2rem;
        margin-top: 2rem;
    }
}
</style>