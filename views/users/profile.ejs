                    </div>
                </div>

                <!-- Profile Information Grid -->
                <div class="row">
                    <!-- Basic Information -->
                    <div class="col-md-6">
                        <div class="profile-card">
                            <div class="profile-card-header">
                                <h5><i class="fa-solid fa-user"></i> Basic Information</h5>
                            </div>
                            <div class="profile-card-body">
                                <div class="info-item">
                                    <label class="info-label">Bio</label>
                                    <p class="info-value">
                                        <%= currentUser.bio || "No bio added yet" %>
                                    </p>
                                </div>
                                <div class="info-item">
                                    <label class="info-label">Location</label>
                                    <p class="info-value">
                                        <% if (currentUser.location) { %>
                                            <i class="fa-solid fa-location-dot"></i>
                                            <%= currentUser.location %>
                                                <% } else { %>
                                                    Not specified
                                                    <% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Interests & Hobbies -->
                    <div class="col-md-6">
                        <div class="profile-card">
                            <div class="profile-card-header">
                                <h5><i class="fa-solid fa-heart"></i> Interests & Hobbies</h5>
                            </div>
                            <div class="profile-card-body">
                                <div class="info-item">
                                    <label class="info-label">Hobbies</label>
                                    <div class="tags-container">
                                        <% if (currentUser.hobbies && currentUser.hobbies.length> 0) { %>
                                            <% currentUser.hobbies.forEach(hobby=> { %>
                                                <span class="tag">
                                                    <%= hobby %>
                                                </span>
                                                <% }); %>
                                                    <% } else { %>
                                                        <p class="info-value">No hobbies added</p>
                                                        <% } %>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <label class="info-label">Interests</label>
                                    <div class="tags-container">
                                        <% if (currentUser.interests && currentUser.interests.length> 0) { %>
                                            <% currentUser.interests.forEach(interest=> { %>
                                                <span class="tag">
                                                    <%= interest %>
                                                </span>
                                                <% }); %>
                                                    <% } else { %>
                                                        <p class="info-value">No interests added</p>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Travel Preferences -->
                    <div class="col-md-6">
                        <div class="profile-card">
                            <div class="profile-card-header">
                                <h5><i class="fa-solid fa-plane"></i> Travel Preferences</h5>
                            </div>
                            <div class="profile-card-body">
                                <div class="info-item">
                                    <label class="info-label">Favorite Destinations</label>
                                    <div class="tags-container">
                                        <% if (currentUser.favoriteDestinations &&
                                            currentUser.favoriteDestinations.length> 0) { %>
                                            <% currentUser.favoriteDestinations.forEach(destination=> { %>
                                                <span class="tag">
                                                    <%= destination %>
                                                </span>
                                                <% }); %>
                                                    <% } else { %>
                                                        <p class="info-value">No destinations added</p>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="col-md-6">
                        <div class="profile-card">
                            <div class="profile-card-header">
                                <h5><i class="fa-solid fa-link"></i> Social Links</h5>
                            </div>
                            <div class="profile-card-body">
                                <div class="social-links">
                                    <% if (currentUser.socialLinks && Object.keys(currentUser.socialLinks).some(key=>
                                        currentUser.socialLinks[key])) { %>
                                        <% if (currentUser.socialLinks.website) { %>
                                            <a href="<%= currentUser.socialLinks.website %>" target="_blank"
                                                class="social-link">
                                                <i class="fa-solid fa-globe"></i> Website
                                            </a>
                                            <% } %>
                                                <% if (currentUser.socialLinks.instagram) { %>
                                                    <a href="<%= currentUser.socialLinks.instagram %>" target="_blank"
                                                        class="social-link">
                                                        <i class="fa-brands fa-instagram"></i> Instagram
                                                    </a>
                                                    <% } %>
                                                        <% if (currentUser.socialLinks.twitter) { %>
                                                            <a href="<%= currentUser.socialLinks.twitter %>"
                                                                target="_blank" class="social-link">
                                                                <i class="fa-brands fa-twitter"></i> Twitter
                                                            </a>
                                                            <% } %>
                                                                <% if (currentUser.socialLinks.linkedin) { %>
                                                                    <a href="<%= currentUser.socialLinks.linkedin %>"
                                                                        target="_blank" class="social-link">
                                                                        <i class="fa-brands fa-linkedin"></i> LinkedIn
                                                                    </a>
                                                                    <% } %>
                                                                        <% } else { %>
                                                                            <p class="info-value">No social links added
                                                                            </p>
                                                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Profile Tab -->
            <div class="tab-pane fade" id="edit">
                <form action="/profile?_method=PUT" method="POST">
                    <div class="row">
                        <!-- Basic Information -->
                        <div class="col-md-6">
                            <div class="profile-card">
                                <div class="profile-card-header">
                                    <h5><i class="fa-solid fa-user"></i> Basic Information</h5>
                                </div>
                                <div class="profile-card-body">
                                    <div class="form-group">
                                        <label for="bio" class="form-label">Bio</label>
                                        <textarea class="form-control" id="bio" name="bio" rows="4" maxlength="500"
                                            placeholder="Tell us about yourself..."><%= currentUser.bio || "" %></textarea>
                                        <span class="form-text">Maximum 500 characters</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="location" class="form-label">Location</label>
                                        <input type="text" class="form-control" id="location" name="location"
                                            value="<%= currentUser.location || "" %>" placeholder="City, Country">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Interests & Hobbies -->
                        <div class="col-md-6">
                            <div class="profile-card">
                                <div class="profile-card-header">
                                    <h5><i class="fa-solid fa-heart"></i> Interests & Hobbies</h5>
                                </div>
                                <div class="profile-card-body">
                                    <div class="form-group">
                                        <label for="hobbies" class="form-label">Hobbies</label>
                                        <input type="text" class="form-control" id="hobbies" name="hobbies"
                                            value="<%= currentUser.hobbies ? currentUser.hobbies.join(', ') : '' %>"
                                            placeholder="Photography, Hiking, Reading...">
                                        <span class="form-text">Separate with commas</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="interests" class="form-label">Interests</label>
                                        <input type="text" class="form-control" id="interests" name="interests"
                                            value="<%= currentUser.interests ? currentUser.interests.join(', ') : '' %>"
                                            placeholder="Travel, Food, Culture...">
                                        <span class="form-text">Separate with commas</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Travel Preferences -->
                        <div class="col-md-6">
                            <div class="profile-card">
                                <div class="profile-card-header">
                                    <h5><i class="fa-solid fa-plane"></i> Travel Preferences</h5>
                                </div>
                                <div class="profile-card-body">
                                    <div class="form-group">
                                        <label for="favoriteDestinations" class="form-label">Favorite
                                            Destinations</label>
                                        <input type="text" class="form-control" id="favoriteDestinations"
                                            name="favoriteDestinations"
                                            value="<%= currentUser.favoriteDestinations ? currentUser.favoriteDestinations.join(', ') : '' %>"
                                            placeholder="Paris, Tokyo, New York...">
                                        <span class="form-text">Separate with commas</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Social Links -->
                        <div class="col-md-6">
                            <div class="profile-card">
                                <div class="profile-card-header">
                                    <h5><i class="fa-solid fa-link"></i> Social Links</h5>
                                </div>
                                <div class="profile-card-body">
                                    <div class="form-group">
                                        <label for="website" class="form-label">Website</label>
                                        <input type="url" class="form-control" id="website" name="website"
                                            value="<%= currentUser.socialLinks ? currentUser.socialLinks.website : '' %>"
                                            placeholder="https://yourwebsite.com">
                                    </div>
                                    <div class="form-group">
                                        <label for="instagram" class="form-label">Instagram</label>
                                        <input type="url" class="form-control" id="instagram" name="instagram"
                                            value="<%= currentUser.socialLinks ? currentUser.socialLinks.instagram : '' %>"
                                            placeholder="https://instagram.com/username">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Privacy Settings -->
                        <div class="col-12">
                            <div class="profile-card">
                                <div class="profile-card-header">
                                    <h5><i class="fa-solid fa-shield-alt"></i> Privacy Settings</h5>
                                </div>
                                <div class="profile-card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="isPublic"
                                                    name="isPublic" <%=(currentUser.profileSettings &&
                                                    currentUser.profileSettings.isPublic) ? 'checked' : '' %>>
                                                <label class="form-check-label" for="isPublic">
                                                    <strong>Public Profile</strong>
                                                    <small>Allow others to view your profile</small>
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="showEmail"
                                                    name="showEmail" <%=(currentUser.profileSettings &&
                                                    currentUser.profileSettings.showEmail) ? 'checked' : '' %>>
                                                <label class="form-check-label" for="showEmail">
                                                    <strong>Show Email</strong>
                                                    <small>Display your email on your profile</small>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="showWishlist"
                                                    name="showWishlist" <%=(currentUser.profileSettings &&
                                                    currentUser.profileSettings.showWishlist) ? 'checked' : '' %>>
                                                <label class="form-check-label" for="showWishlist">
                                                    <strong>Show Wishlist</strong>
                                                    <small>Let others see your wishlist</small>
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="showTravelStats"
                                                    name="showTravelStats" <%=(currentUser.profileSettings &&
                                                    currentUser.profileSettings.showTravelStats !==false) ? 'checked'
                                                    : '' %>>
                                                <label class="form-check-label" for="showTravelStats">
                                                    <strong>Show Travel Stats</strong>
                                                    <small>Display your travel statistics</small>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-save"></i> Save Changes
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="window.location.reload()">
                            <i class="fa-solid fa-times"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>

            <!-- Badges Tab -->
            <div class="tab-pane fade" id="badges">
                <div class="profile-card">
                    <div class="profile-card-header">
                        <h5><i class="fa-solid fa-trophy"></i> Achievement Badges</h5>
                    </div>
                    <div class="profile-card-body">
                        <% if (typeof user !=='undefined' && user.badges && user.badges.length> 0) { %>
                            <div class="badge-grid">
                                <% user.badges.forEach(badge=> { %>
                                    <div class="badge-card">
                                        <div class="badge-icon">
                                            <i class="<%= badge.icon || 'fa-solid fa-medal' %> fa-2x"></i>
                                        </div>
                                        <h6 class="badge-name">
                                            <%= badge.name %>
                                        </h6>
                                        <p class="badge-description">
                                            <%= badge.description %>
                                        </p>
                                        <small class="badge-date">Earned <%= new
                                                Date(badge.earnedAt).toLocaleDateString() %></small>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } else { %>
                                <div class="empty-state">
                                    <i class="fa-solid fa-medal empty-state-icon"></i>
                                    <h5 class="empty-state-title">No badges earned yet</h5>
                                    <p class="empty-state-text">Complete your profile, create listings, and write
                                        reviews to earn badges!</p>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>

            <!-- Travel Goals Tab -->
            <div class="tab-pane fade" id="goals">
                <div class="row">
                    <div class="col-md-8">
                        <div class="profile-card">
                            <div class="profile-card-header">
                                <h5><i class="fa-solid fa-map-marked-alt"></i> My Travel Goals</h5>
                            </div>
                            <div class="profile-card-body">
                                <% if (typeof user !=='undefined' && user.travelGoals && user.travelGoals.length> 0) {
                                    %>
                                    <% user.travelGoals.forEach(goal=> { %>
                                        <div class="goal-item <%= goal.isCompleted ? 'completed' : '' %>">
                                            <div class="goal-header">
                                                <h6 class="goal-title">
                                                    <%= goal.destination %>
                                                </h6>
                                                <div class="goal-actions">
                                                    <% if (!goal.isCompleted) { %>
                                                        <form
                                                            action="/profile/travel-goals/<%= goal._id %>/complete?_method=PATCH"
                                                            method="POST" style="display: inline;">
                                                            <button type="submit" class="btn btn-success">
                                                                <i class="fa-solid fa-check"></i>
                                                            </button>
                                                        </form>
                                                        <% } %>
                                                            <form
                                                                action="/profile/travel-goals/<%= goal._id %>?_method=DELETE"
                                                                method="POST" style="display: inline;">
                                                                <button type="submit" class="btn btn-danger"
                                                                    onclick="return confirm('Delete this goal?')">
                                                                    <i class="fa-solid fa-trash"></i>
                                                                </button>
                                                            </form>
                                                </div>
                                            </div>
                                            <% if (goal.description) { %>
                                                <p class="goal-description">
                                                    <%= goal.description %>
                                                </p>
                                                <% } %>
                                                    <div class="goal-meta">
                                                        <% if (goal.targetDate) { %>
                                                            <span>Target: <%= new
                                                                    Date(goal.targetDate).toLocaleDateString() %></span>
                                                            <% } %>
                                                                <% if (goal.isCompleted) { %>
                                                                    <span
                                                                        style="color: var(--color-success); font-weight: 600;">✅
                                                                        Completed <%= new
                                                                            Date(goal.completedAt).toLocaleDateString()
                                                                            %></span>
                                                                    <% } %>
                                                    </div>
                                        </div>
                                        <% }); %>
                                            <% } else { %>
                                                <div class="empty-state">
                                                    <i class="fa-solid fa-compass empty-state-icon"></i>
                                                    <h5 class="empty-state-title">No travel goals set</h5>
                                                    <p class="empty-state-text">Set your travel goals and track your
                                                        journey!</p>
                                                </div>
                                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="profile-card">
                            <div class="profile-card-header">
                                <h5><i class="fa-solid fa-plus"></i> Add New Goal</h5>
