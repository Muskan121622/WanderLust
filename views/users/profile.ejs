<% layout('/layouts/boilerplate') %>

    <style>
        /* ===================================
       CSS CUSTOM PROPERTIES (DESIGN TOKENS)
       =================================== */
        :root {
            /* Color System */
            --color-primary: #FF385C;
            --color-primary-dark: #E31C5F;
            --color-primary-light: rgba(255, 56, 92, 0.1);

            --color-secondary: #00A699;
            --color-secondary-dark: #008A80;

            --color-accent: #FFD60A;

            --color-success: #28A745;
            --color-danger: #DC3545;
            --color-warning: #FFC107;
            --color-info: #17A2B8;

            /* Neutral Colors */
            --color-neutral-50: #F7F7F7;
            --color-neutral-100: #E1E1E1;
            --color-neutral-200: #CFCFCF;
            --color-neutral-300: #B1B1B1;
            --color-neutral-400: #9E9E9E;
            --color-neutral-500: #7E7E7E;
            --color-neutral-600: #626262;
            --color-neutral-700: #515151;
            --color-neutral-800: #3B3B3B;
            --color-neutral-900: #222222;

            /* Text Colors */
            --text-primary: #222222;
            --text-secondary: #717171;
            --text-muted: #B0B0B0;
            --text-inverse: #FFFFFF;

            /* Background Colors */
            --bg-primary: #FFFFFF;
            --bg-secondary: #F7F7F7;
            --bg-tertiary: rgba(255, 255, 255, 0.05);
            --bg-overlay: rgba(0, 0, 0, 0.5);

            /* Border Colors */
            --border-light: #EBEBEB;
            --border-medium: #DDDDDD;
            --border-dark: #B0B0B0;

            /* Shadows */
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.12);
            --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.15);
            --shadow-xl: 0 12px 32px rgba(0, 0, 0, 0.18);

            /* Spacing System */
            --spacing-xs: 0.25rem;
            --spacing-sm: 0.5rem;
            --spacing-md: 1rem;
            --spacing-lg: 1.5rem;
            --spacing-xl: 2rem;
            --spacing-2xl: 3rem;

            /* Border Radius */
            --radius-sm: 0.5rem;
            --radius-md: 0.75rem;
            --radius-lg: 1rem;
            --radius-xl: 1.25rem;
            --radius-full: 50%;

            /* Transitions */
            --transition-fast: 150ms ease;
            --transition-base: 250ms ease;
            --transition-slow: 350ms ease;

            /* Typography */
            --font-weight-normal: 400;
            --font-weight-medium: 500;
            --font-weight-semibold: 600;
            --font-weight-bold: 700;
            --font-weight-extrabold: 800;
        }

        [data-theme="dark"] {
            --text-primary: #FFFFFF;
            --text-secondary: #B0B0B0;
            --text-muted: #717171;

            --bg-primary: #1A1A1A;
            --bg-secondary: #2A2A2A;
            --bg-tertiary: rgba(255, 255, 255, 0.05);

            --border-light: #3A3A3A;
            --border-medium: #4A4A4A;
            --border-dark: #5A5A5A;
        }

        /* ===================================
       LAYOUT COMPONENTS
       =================================== */
        .profile-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--spacing-xl) var(--spacing-lg);
        }

        /* ===================================
       PROFILE HEADER
       =================================== */
        .profile-header {
            background: var(--bg-primary);
            border: 1px solid var(--border-light);
            border-radius: var(--radius-xl);
            padding: var(--spacing-xl);
            margin-bottom: var(--spacing-xl);
            box-shadow: var(--shadow-md);
            position: relative;
            overflow: hidden;
        }

        .profile-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: var(--radius-full);
            background: var(--bg-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto var(--spacing-md);
            border: 3px solid var(--border-light);
            box-shadow: var(--shadow-md);
            transition: transform var(--transition-base);
        }

        .profile-avatar:hover {
            transform: scale(1.05);
        }

        .profile-avatar i {
            color: var(--color-primary);
            font-size: 3.5rem;
        }

        .profile-info {
            text-align: center;
        }

        .profile-name {
            font-size: 2rem;
            font-weight: var(--font-weight-bold);
            color: var(--text-primary);
            margin-bottom: var(--spacing-sm);
        }

        .profile-meta {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-sm);
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .profile-meta-item {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--spacing-sm);
        }

        /* ===================================
       NAVIGATION TABS
       =================================== */
        .profile-tabs {
            border-bottom: 2px solid var(--border-light);
            margin-bottom: var(--spacing-xl);
            overflow-x: auto;
            scrollbar-width: none;
        }

        .profile-tabs::-webkit-scrollbar {
            display: none;
        }

        .profile-tabs .nav-link {
            border: none;
            color: var(--text-secondary);
            font-weight: var(--font-weight-semibold);
            padding: var(--spacing-md) var(--spacing-lg);
            border-radius: var(--radius-md) var(--radius-md) 0 0;
            transition: all var(--transition-base);
            margin-right: var(--spacing-sm);
            white-space: nowrap;
            position: relative;
        }

        .profile-tabs .nav-link:hover {
            background-color: var(--bg-tertiary);
            color: var(--text-primary);
        }

        .profile-tabs .nav-link.active {
            color: var(--color-primary);
            background: var(--bg-secondary);
        }

        .profile-tabs .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--color-primary);
            border-radius: var(--radius-sm) var(--radius-sm) 0 0;
        }

        .profile-tabs .badge {
            background: var(--color-primary);
            color: var(--text-inverse);
            font-size: 0.75rem;
            padding: 0.2rem 0.5rem;
            border-radius: var(--radius-full);
            margin-left: var(--spacing-xs);
        }

        /* ===================================
       CARD COMPONENTS
       =================================== */
        .profile-card {
            background: var(--bg-primary);
            border: 1px solid var(--border-light);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-sm);
            transition: all var(--transition-base);
            margin-bottom: var(--spacing-lg);
            overflow: hidden;
        }

        .profile-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

        .profile-card-header {
            background: var(--bg-secondary);
            padding: var(--spacing-lg);
            border-bottom: 1px solid var(--border-light);
        }

        .profile-card-header h5 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: var(--font-weight-bold);
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
        }

        .profile-card-body {
            padding: var(--spacing-lg);
        }

        /* ===================================
       STATISTICS GRID
       =================================== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--spacing-lg);
            margin-bottom: var(--spacing-xl);
        }

        .stat-card {
            background: var(--bg-secondary);
            padding: var(--spacing-xl);
            border-radius: var(--radius-lg);
            text-align: center;
            border: 1px solid var(--border-light);
            transition: all var(--transition-base);
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: var(--color-primary);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: var(--font-weight-bold);
            color: var(--color-primary);
            margin-bottom: var(--spacing-sm);
            line-height: 1;
        }

        .stat-label {
            color: var(--text-secondary);
            font-weight: var(--font-weight-semibold);
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        /* ===================================
       INFO SECTIONS
       =================================== */
        .info-item {
            margin-bottom: var(--spacing-lg);
            padding-bottom: var(--spacing-lg);
            border-bottom: 1px solid var(--border-light);
        }

        .info-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .info-label {
            display: block;
            margin-bottom: var(--spacing-sm);
            color: var(--text-secondary);
            font-weight: var(--font-weight-semibold);
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .info-value {
            color: var(--text-primary);
            line-height: 1.6;
            font-size: 1rem;
        }

        /* ===================================
       TAGS & BADGES
       =================================== */
        .tags-container {
            display: flex;
            flex-wrap: wrap;
            gap: var(--spacing-sm);
        }

        .tag {
            background: var(--bg-secondary);
            color: var(--text-primary);
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: var(--radius-full);
            font-size: 0.9rem;
            font-weight: var(--font-weight-medium);
            border: 1px solid var(--border-medium);
            transition: all var(--transition-fast);
        }

        .tag:hover {
            background: var(--color-primary);
            color: var(--text-inverse);
            border-color: var(--color-primary);
            transform: translateY(-2px);
        }

        /* ===================================
       SOCIAL LINKS
       =================================== */
        .social-links {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-sm);
        }

        .social-link {
            display: flex;
            align-items: center;
            padding: var(--spacing-md);
            border-radius: var(--radius-md);
            transition: background-color var(--transition-fast);
            text-decoration: none;
            color: var(--text-primary);
            font-weight: var(--font-weight-medium);
        }

        .social-link:hover {
            background-color: var(--bg-tertiary);
            color: var(--color-primary);
        }

        .social-link i {
            margin-right: var(--spacing-md);
            font-size: 1.25rem;
            min-width: 24px;
            text-align: center;
        }

        /* ===================================
       FORM ELEMENTS
       =================================== */
        .form-group {
            margin-bottom: var(--spacing-lg);
        }

        .form-label {
            display: block;
            color: var(--text-primary);
            font-weight: var(--font-weight-semibold);
            margin-bottom: var(--spacing-sm);
            font-size: 0.95rem;
        }

        .form-control {
            background-color: var(--bg-secondary);
            border: 1px solid var(--border-medium);
            color: var(--text-primary);
            border-radius: var(--radius-md);
            padding: var(--spacing-md);
            font-size: 1rem;
            width: 100%;
            transition: all var(--transition-fast);
        }

        .form-control:focus {
            outline: none;
            background-color: var(--bg-primary);
            border-color: var(--color-primary);
            box-shadow: 0 0 0 3px var(--color-primary-light);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .form-text {
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-top: var(--spacing-xs);
            display: block;
        }

        .form-check {
            display: flex;
            align-items: flex-start;
            gap: var(--spacing-md);
            padding: var(--spacing-md) 0;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            border: 2px solid var(--border-medium);
            border-radius: var(--radius-sm);
            cursor: pointer;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .form-check-input:checked {
            background-color: var(--color-primary);
            border-color: var(--color-primary);
        }

        .form-check-label {
            color: var(--text-primary);
            cursor: pointer;
            flex: 1;
        }

        .form-check-label strong {
            display: block;
            margin-bottom: var(--spacing-xs);
        }

        .form-check-label small {
            color: var(--text-secondary);
        }

        /* ===================================
       BUTTONS & ACTIONS
       =================================== */
        .btn-group {
            display: flex;
            gap: var(--spacing-md);
            justify-content: center;
            flex-wrap: wrap;
            margin-top: var(--spacing-xl);
        }

        .btn {
            padding: var(--spacing-md) var(--spacing-xl);
            border-radius: var(--radius-md);
            font-weight: var(--font-weight-semibold);
            font-size: 1rem;
            border: 2px solid transparent;
            cursor: pointer;
            transition: all var(--transition-base);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--spacing-sm);
            text-decoration: none;
            min-width: 150px;
        }

        .btn-primary {
            background: var(--color-primary);
            color: var(--text-inverse);
            border-color: var(--color-primary);
        }

        .btn-primary:hover {
            background: var(--color-primary-dark);
            border-color: var(--color-primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .btn-secondary {
            background: transparent;
            color: var(--text-primary);
            border-color: var(--border-dark);
        }

        .btn-secondary:hover {
            background: var(--bg-secondary);
            transform: translateY(-2px);
        }

        .btn-danger {
            background: transparent;
            color: var(--color-danger);
            border-color: var(--color-danger);
        }

        .btn-danger:hover {
            background: var(--color-danger);
            color: var(--text-inverse);
            transform: translateY(-2px);
        }

        .btn-success {
            background: var(--color-success);
            color: var(--text-inverse);
            border-color: var(--color-success);
            padding: var(--spacing-sm) var(--spacing-md);
            min-width: auto;
        }

        /* ===================================
       PROGRESS BAR
       =================================== */
        .progress-wrapper {
            margin-top: var(--spacing-md);
        }

        .progress {
            height: 8px;
            border-radius: var(--radius-full);
            background: var(--bg-secondary);
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
            transition: width var(--transition-slow);
            border-radius: var(--radius-full);
        }

        .progress-text {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--spacing-sm);
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .progress-hint {
            margin-top: var(--spacing-sm);
            color: var(--text-muted);
            font-size: 0.85rem;
        }

        /* ===================================
       BADGE CARDS
       =================================== */
        .badge-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: var(--spacing-lg);
        }

        .badge-card {
            text-align: center;
            padding: var(--spacing-xl);
            border-radius: var(--radius-lg);
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            color: var(--text-inverse);
            box-shadow: var(--shadow-md);
            transition: transform var(--transition-base);
        }

        .badge-card:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: var(--shadow-xl);
        }

        .badge-icon {
            font-size: 3rem;
            margin-bottom: var(--spacing-md);
        }

        .badge-name {
            font-size: 1.25rem;
            font-weight: var(--font-weight-bold);
            margin-bottom: var(--spacing-sm);
        }

        .badge-description {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-bottom: var(--spacing-sm);
        }

        .badge-date {
            font-size: 0.8rem;
            opacity: 0.8;
        }

        /* ===================================
       TRAVEL GOALS
       =================================== */
        .goal-item {
            border: 1px solid var(--border-light);
            border-radius: var(--radius-md);
            padding: var(--spacing-lg);
            margin-bottom: var(--spacing-md);
            background: var(--bg-secondary);
            transition: all var(--transition-base);
        }

        .goal-item:hover {
            border-color: var(--color-primary);
            transform: translateX(4px);
        }

        .goal-item.completed {
            background: rgba(40, 167, 69, 0.1);
            border-color: var(--color-success);
        }

        .goal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--spacing-sm);
        }

        .goal-title {
            font-size: 1.1rem;
            font-weight: var(--font-weight-semibold);
            color: var(--text-primary);
            margin: 0;
        }

        .goal-actions {
            display: flex;
            gap: var(--spacing-sm);
        }

        .goal-description {
            color: var(--text-secondary);
            margin-bottom: var(--spacing-md);
            font-style: italic;
        }

        .goal-meta {
            display: flex;
            gap: var(--spacing-lg);
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        /* ===================================
       ACTIVITY TIMELINE
       =================================== */
        .activity-timeline {
            position: relative;
            padding-left: var(--spacing-2xl);
        }

        .activity-timeline::before {
            content: '';
            position: absolute;
            left: 1rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, var(--color-primary), var(--color-secondary));
        }

        .activity-item {
            position: relative;
            margin-bottom: var(--spacing-xl);
        }

        .activity-icon {
            position: absolute;
            left: calc(-1 * var(--spacing-2xl));
            top: 0;
            width: 2rem;
            height: 2rem;
            background: var(--color-primary);
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-inverse);
            font-size: 0.8rem;
            border: 3px solid var(--bg-primary);
            box-shadow: var(--shadow-sm);
        }

        .activity-content {
            background: var(--bg-secondary);
            padding: var(--spacing-lg);
            border-radius: var(--radius-md);
            border-left: 3px solid var(--color-primary);
        }

        .activity-text {
            color: var(--text-primary);
            margin-bottom: var(--spacing-sm);
            font-weight: var(--font-weight-medium);
        }

        .activity-time {
            color: var(--text-muted);
            font-size: 0.8rem;
        }

        /* ===================================
       EMPTY STATES
       =================================== */
        .empty-state {
            text-align: center;
            padding: var(--spacing-2xl) var(--spacing-lg);
        }

        .empty-state-icon {
            font-size: 4rem;
            color: var(--text-muted);
            margin-bottom: var(--spacing-lg);
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: var(--font-weight-semibold);
            color: var(--text-primary);
            margin-bottom: var(--spacing-sm);
        }

        .empty-state-text {
            color: var(--text-secondary);
            max-width: 400px;
            margin: 0 auto;
        }

        /* ===================================
       RESPONSIVE DESIGN
       =================================== */
        @media (max-width: 768px) {
            .profile-container {
                padding: var(--spacing-md);
            }

            .profile-header {
                padding: var(--spacing-lg);
            }

            .profile-name {
                font-size: 1.5rem;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: var(--spacing-md);
            }

            .profile-tabs .nav-link {
                padding: var(--spacing-sm) var(--spacing-md);
                font-size: 0.9rem;
            }

            .btn-group {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }

            .badge-grid {
                grid-template-columns: 1fr;
            }

            .activity-timeline {
                padding-left: var(--spacing-xl);
            }
        }

        @media (max-width: 480px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .stat-number {
                font-size: 2rem;
            }
        }
    </style>

    <div class="profile-container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <div class="profile-avatar">
                        <i class="fa-solid fa-user-circle"></i>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="profile-info">
                        <h1 class="profile-name">
                            <%= currentUser.username %>
                        </h1>
                        <div class="profile-meta">
                            <div class="profile-meta-item">
                                <i class="fa-solid fa-list"></i>
                                <span>
                                    <%= typeof listingCount !=='undefined' ? listingCount : 0 %> Listings
                                </span>
                            </div>
                            <div class="profile-meta-item">
                                <i class="fa-solid fa-envelope"></i>
                                <span>
                                    <%= currentUser.email %>
                                </span>
                            </div>
                            <div class="profile-meta-item">
                                <i class="fa-solid fa-calendar-days"></i>
                                <span>Member since <%= new Date(currentUser.joinDate || new
                                        Date()).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                                        day: 'numeric' }) %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <ul class="nav profile-tabs" id="profileTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#overview" type="button">
                    <i class="fa-solid fa-eye"></i> Overview
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#edit" type="button">
                    <i class="fa-solid fa-edit"></i> Edit Profile
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#badges" type="button">
                    <i class="fa-solid fa-award"></i> Badges
                    <span class="badge">
                        <%= typeof user !=='undefined' && user.badges ? user.badges.length : 0 %>
                    </span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#goals" type="button">
                    <i class="fa-solid fa-target"></i> Travel Goals
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#activity" type="button">
