<% layout('/layouts/boilerplate') %>

<style>
    
    :root {
        --profile-header-bg: linear-gradient(135deg, #1ed9a8, #0f5a7c);
        --profile-card-bg: rgba(15, 90, 124, 0.25);
        --card-header-bg: linear-gradient(to right, rgba(10, 70, 100, 0.8), rgba(8, 50, 75, 0.9));
        --accent-border-color: #1ed9a8;
        --accent-border-color-dark: #0f5a7c;
        --tag-bg: linear-gradient(135deg, #1ed9a8, #0f5a7c);
        --link-color: #a7d8f9;
        --header-text-color: #ffffff;
        --body-text-color: #e0f7ff;
        --text-primary: #0a2533;
        --shadow-color: rgba(0, 0, 0, 0.2);
    }

    .profile-header {
        background: var(--profile-header-bg);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 1.25rem;
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        position: relative;
        overflow: hidden;
    }

    .profile-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(to right, #1ed9a8, #0f5a7c);
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        border: 3px solid white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

    .profile-avatar:hover {
        transform: scale(1.05);
    }

    .profile-avatar .fa-user-circle {
        color: #0f5a7c !important;
    }

    .profile-header h3 {
        font-weight: 800;
        font-size: 2.2rem;
        color: var(--text-primary);
        text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.5);
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .profile-header p {
        opacity: 0.95;
        color: var(--body-text-color);
        margin-bottom: 0.3rem;
    }

    .nav-tabs {
        border-bottom: 2px solid rgba(30, 217, 168, 0.3);
        margin-bottom: 2rem;
    }

    .nav-tabs .nav-link {
        border: none;
        color: var(--body-text-color);
        font-weight: 600;
        padding: 0.8rem 1.5rem;
        border-radius: 0.5rem 0.5rem 0 0;
        transition: all 0.3s ease;
        margin-right: 0.5rem;
    }

    .nav-tabs .nav-link:hover {
        background-color: rgba(30, 217, 168, 0.1);
        border-color: transparent;
    }

    .nav-tabs .nav-link.active {
        background: linear-gradient(to bottom, rgba(30, 217, 168, 0.2), transparent);
        color: var(--accent-border-color);
        border-bottom: 3px solid var(--accent-border-color);
    }

    .profile-card {
        background-color: var(--profile-card-bg);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        color: var(--body-text-color);
        height: 100%;
        overflow: hidden;
        border: 2px solid transparent;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
    }

    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .row .col-md-6:nth-child(odd) .profile-card {
        border-top: 3px solid var(--accent-border-color);
        border-right: 3px solid var(--accent-border-color-dark);
    }

    .row .col-md-6:nth-child(even) .profile-card {
        border-top: 3px solid var(--accent-border-color);
        border-left: 3px solid var(--accent-border-color-dark);
    }

    .profile-card .card-header {
        background: var(--card-header-bg);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        padding: 1.2rem 1.5rem;
        font-weight: 700;
        color: var(--header-text-color);
        position: relative;
    }

    .profile-card .card-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(to right, transparent, var(--accent-border-color), transparent);
    }

    .profile-card .card-header h5 {
        margin: 0;
        font-size: 1.2rem;
    }

    .profile-card .card-body {
        padding: 1.8rem;
    }

    .info-item {
        margin-bottom: 1.8rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .info-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .info-item label {
        display: block;
        margin-bottom: 0.7rem;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .info-item p {
        margin: 0;
        line-height: 1.6;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tags-container .tag {
        background: var(--tag-bg);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 500;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .tags-container .tag:hover {
        transform: translateY(-2px);
    }

    .social-link {
        margin-bottom: 1rem;
        padding: 0.8rem;
        border-radius: 0.5rem;
        transition: background-color 0.2s ease;
    }

    .social-link:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }

    .social-link a {
        color: var(--link-color);
        text-decoration: none;
        display: flex;
        align-items: center;
        font-weight: 500;
    }

    .social-link a:hover {
        color: var(--accent-border-color);
    }

    /* Form Styling */
.profile-container .form-control {
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: var(--body-text-color);
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
}

.profile-container .form-control:focus {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: var(--accent-border-color);
    box-shadow: 0 0 0 0.2rem rgba(30, 217, 168, 0.25);
    color: var(--body-text-color);
}

.profile-container .form-control::placeholder {
    color: rgba(255, 255, 255, 0.6);
}


    .form-label {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        margin-bottom: 0.7rem;
    }

    .form-text {
        color: rgba(255, 255, 255, 0.6);
    }

    .profile-actions {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 2rem;
        padding: 2rem;
        background: rgba(10, 60, 80, 0.3);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .profile-actions .btn {
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        min-width: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .profile-actions .btn-primary {
        background: linear-gradient(135deg, var(--accent-border-color), #0f5a7c);
        color: white;
        border: none;
    }

    .profile-actions .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        background: linear-gradient(135deg, #22e6b8, #11688e);
    }

    .profile-actions .btn-secondary {
        background: transparent;
        border: 2px solid rgba(255, 255, 255, 0.7);
        color: white;
    }

    .profile-actions .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .profile-actions .btn-danger {
        background: transparent;
        border: 2px solid #dc3545;
        color: #dc3545;
    }

    .profile-actions .btn-danger:hover {
        background: rgba(220, 53, 69, 0.1);
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 2.5rem;
        padding: 0;
    }

    .form-actions .btn {
        min-width: 180px;
        padding: 0.9rem 2rem;
        font-size: 1.1rem;
    }

    @media (max-width: 768px) {
        .profile-header {
            text-align: center;
            padding: 1.5rem;
        }

        .profile-avatar {
            margin-bottom: 1rem;
        }

        .profile-header h3 {
            font-size: 1.8rem;
        }

        .row .col-md-6:nth-child(odd) .profile-card,
        .row .col-md-6:nth-child(even) .profile-card {
            border-left: none;
            border-right: none;
            border-top: 3px solid var(--accent-border-color);
        }

        .profile-actions,
        .form-actions {
            flex-direction: column;
            padding: 1.5rem;
        }

        .profile-actions .btn,
        .form-actions .btn {
            width: 100%;
        }

        .nav-tabs .nav-link {
            padding: 0.7rem 1rem;
            font-size: 0.9rem;
        }
    }
</style>

<div class="profile-container mt-3">
    <div class="row">
        <div class="col-12">
            <div class="profile-header mb-3">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center">
                        <div class="profile-avatar">
                            <i class="fa-solid fa-user-circle fa-4x"></i>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h3 class="mb-1">
                            <%= currentUser.username %>
                        </h3>
                        <p class="mb-1 fs-6">
                            <i class="fa-solid fa-list me-2"></i>
                            Listings created: <%= typeof listingCount !=='undefined' ? listingCount : 0 %>
                        </p>
                        <p class="mb-1 fs-6">
                            <i class="fa-solid fa-envelope me-2"></i>
                            <%= currentUser.email %>
                        </p>
                        <p class="mb-0 fs-6">
                            <i class="fa-solid fa-calendar-days me-2"></i>
                            Member since <%= new Date(currentUser.joinDate || new Date()).toLocaleDateString('en-US', { year: 'numeric'
                                , month: 'long' , day: 'numeric' }) %>
                        </p>
                    </div>
                </div>
            </div>

            <ul class="nav nav-tabs mb-3" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="view-tab" data-bs-toggle="tab"
                        data-bs-target="#view-profile" type="button" role="tab">
                        <i class="fa-solid fa-eye me-2"></i>View Profile
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="edit-tab" data-bs-toggle="tab" data-bs-target="#edit-profile"
                        type="button" role="tab">
                        <i class="fa-solid fa-edit me-2"></i>Edit Profile
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="profileTabsContent">
                <!-- View Profile Tab -->
                <div class="tab-pane fade show active" id="view-profile" role="tabpanel">
                    <div class="row">
                        <!-- Basic Info Cardddd -->
                        <div class="col-md-6 mb-4">
                            <div class="profile-card">
                                <div class="card-header">
                                    <h5><i class="fa-solid fa-user me-2"></i>Basic Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="info-item">
                                        <label>Bio:</label>
                                        <p>
                                            <%= currentUser.bio || "Tell us a bit about yourself to make your profile more engaging!"
                                                %>
                                        </p>
                                    </div>
                                    <div class="info-item">
                                        <label>Location:</label>
                                        <p>
                                            <% if (currentUser.location) { %>
                                                <i class="fa-solid fa-location-dot me-2"></i>
                                                <%= currentUser.location %>
                                                    <% } else { %>
                                                        Not specified
                                                        <% } %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Interests Card -->
                        <div class="col-md-6 mb-4">
                            <div class="profile-card">
                                <div class="card-header">
                                    <h5><i class="fa-solid fa-heart me-2"></i>Interests & Hobbies</h5>
                                </div>
                                <div class="card-body">
                                    <div class="info-item">
                                        <label>Hobbies:</label>
                                        <div class="tags-container">
                                            <% if (currentUser.hobbies && currentUser.hobbies.length> 0) { %>
                                                <% currentUser.hobbies.forEach(hobby=> { %>
                                                    <span class="tag">
                                                        <%= hobby %>
                                                    </span>
                                                    <% });
                                                        %>
                                                        <% } else { %>
                                                            <p class="text-muted">No hobbies added</p>
                                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label>Interests:</label>
                                        <div class="tags-container">
                                            <% if (currentUser.interests && currentUser.interests.length> 0) { %>
                                                <% currentUser.interests.forEach(interest=> { %>
                                                    <span class="tag">
                                                        <%= interest %>
                                                    </span>
                                                    <% });
                                                        %>
                                                        <% } else { %>
                                                            <p class="text-muted">No interests added</p>
                                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Travel Info Card -->
                        <div class="col-md-6 mb-4">
                            <div class="profile-card">
                                <div class="card-header">
                                    <h5><i class="fa-solid fa-plane me-2"></i>Travel Preferences</h5>
                                </div>
                                <div class="card-body">
                                    <div class="info-item">
                                        <label>Favorite Destinations:</label>
                                        <div class="tags-container">
                                            <% if (currentUser.favoriteDestinations &&
                                                currentUser.favoriteDestinations.length> 0) { %>
                                                <% currentUser.favoriteDestinations.forEach(destination=> { %>
                                                    <span class="tag destination-tag">
                                                        <%= destination %>
                                                    </span>
                                                    <% });
                                                        %>
                                                        <% } else { %>
                                                            <p class="text-muted">No favorite destinations added
                                                            </p>
                                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Social Links Card -->
                        <div class="col-md-6 mb-4">
                            <div class="profile-card">
                                <div class="card-header">
                                    <h5><i class="fa-solid fa-link me-2"></i>Social Links</h5>
                                </div>
                                <div class="card-body">
                                    <% if (currentUser.socialLinks) { %>
                                        <% if (currentUser.socialLinks.website) { %>
                                            <div class="social-link">
                                                <a href="<%= currentUser.socialLinks.website %>" target="_blank">
                                                    <i class="fa-solid fa-globe me-2"></i>Website
                                                </a>
                                            </div>
                                            <% } %>
                                                <% if (currentUser.socialLinks.instagram) { %>
                                                    <div class="social-link">
                                                        <a href="<%= currentUser.socialLinks.instagram %>"
                                                            target="_blank">
                                                            <i
                                                                class="fa-brands fa-instagram me-2"></i>Instagram
                                                        </a>
                                                    </div>
                                                    <% } %>
                                                        <% if (currentUser.socialLinks.twitter) { %>
                                                            <div class="social-link">
                                                                <a href="<%= currentUser.socialLinks.twitter %>"
                                                                    target="_blank">
                                                                    <i
                                                                        class="fa-brands fa-twitter me-2"></i>Twitter
                                                                </a>
                                                            </div>
                                                            <% } %>
                                                                <% if (currentUser.socialLinks.linkedin) { %>
                                                                    <div class="social-link">
                                                                        <a href="<%= currentUser.socialLinks.linkedin %>"
                                                                            target="_blank">
                                                                            <i
                                                                                class="fa-brands fa-linkedin me-2"></i>LinkedIn
                                                                        </a>
                                                                    </div>
                                                                    <% } %>
                                                                        <% if (!currentUser.socialLinks.website &&
                                                                            !currentUser.socialLinks.instagram &&
                                                                            !currentUser.socialLinks.twitter &&
                                                                            !currentUser.socialLinks.linkedin) { %>
                                                                            <p class="text-muted">No social links
                                                                                added</p>
                                                                            <% } %>
                                                                                <% } else { %>
                                                                                    <p class="text-muted">No social
                                                                                        links added</p>
                                                                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Profile Tab -->
                <div class="tab-pane fade" id="edit-profile" role="tabpanel">
                    <form action="/profile?_method=PUT" method="POST" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-user me-2"></i>Basic Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="bio" class="form-label">Bio</label>
                                            <textarea class="form-control" id="bio" name="bio" rows="4"
                                                maxlength="500"
                                                placeholder="Tell us about yourself..."><%= currentUser.bio || "" %></textarea>
                                            <div class="form-text">Maximum 500 characters</div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="location" class="form-label">Location</label>
                                            <input type="text" class="form-control" id="location" name="location"
                                                value="<%= currentUser.location || "" %>"
                                                placeholder="City, Country" maxlength="100">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Interests & Hobbies -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-heart me-2"></i>Interests & Hobbies</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="hobbies" class="form-label">Hobbies</label>
                                            <input type="text" class="form-control" id="hobbies" name="hobbies"
                                                value="<%= currentUser.hobbies ? currentUser.hobbies.join(', ') : '' %>"
                                                placeholder="Photography, Hiking, Reading...">
                                            <div class="form-text">Separate multiple hobbies with commas</div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="interests" class="form-label">Interests</label>
                                            <input type="text" class="form-control" id="interests" name="interests"
                                                value="<%= currentUser.interests ? currentUser.interests.join(', ') : '' %>"
                                                placeholder="Travel, Food, Culture...">
                                            <div class="form-text">Separate multiple interests with commas</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Travel Preferences -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-plane me-2"></i>Travel Preferences</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="favoriteDestinations" class="form-label">Favorite
                                                Destinations</label>
                                            <input type="text" class="form-control" id="favoriteDestinations"
                                                name="favoriteDestinations"
                                                value="<%= currentUser.favoriteDestinations ? currentUser.favoriteDestinations.join(', ') : '' %>"
                                                placeholder="Paris, Tokyo, New York...">
                                            <div class="form-text">Separate multiple destinations with commas</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Social Links -->
                            <div class="col-md-6 mb-4">
                                <div class="profile-card">
                                    <div class="card-header">
                                        <h5><i class="fa-solid fa-link me-2"></i>Social Links</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="website" class="form-label">Website</label>
                                            <input type="url" class="form-control" id="website" name="website"
                                                value="<%= currentUser.socialLinks ? currentUser.socialLinks.website : '' %>"
                                                placeholder="https://yourwebsite.com">
                                        </div>
                                        <div class="mb-3">
                                            <label for="instagram" class="form-label">Instagram</label>
                                            <input type="url" class="form-control" id="instagram" name="instagram"
                                                value="<%= currentUser.socialLinks ? currentUser.socialLinks.instagram : '' %>"
                                                placeholder="https://instagram.com/username">
                                        </div>
                                        <div class="mb-3">
                                            <label for="twitter" class="form-label">Twitter</label>
                                            <input type="url" class="form-control" id="twitter" name="twitter"
                                                value="<%= currentUser.socialLinks ? currentUser.socialLinks.twitter : '' %>"
                                                placeholder="https://twitter.com/username">
                                        </div>
                                        <div class="mb-3">
                                            <label for="linkedin" class="form-label">LinkedIn</label>
                                            <input type="url" class="form-control" id="linkedin" name="linkedin"
                                                value="<%= currentUser.socialLinks ? currentUser.socialLinks.linkedin : '' %>"
                                                placeholder="https://linkedin.com/in/username">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-save me-2"></i>Save Changes
                            </button>
                            <button type="button" class="btn btn-secondary"
                                onclick="document.getElementById('view-tab').click();">
                                <i class="fa-solid fa-times me-2"></i>Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="profile-actions">
                <a href="/listings" class="btn btn-secondary">
                    <i class="fa-solid fa-home me-2"></i>Back to Listings
                </a>
                <a href="/logout" class="btn btn-danger">
                    <i class="fa-solid fa-sign-out-alt me-2"></i>Logout
                </a>
            </div>
        </div>
    </div>
</div>