<% layout('/layouts/boilerplate') %>

<style>
    .glass-container {
        background-color: rgba(255, 255, 255, 0.2); /* Translucent white background */
        backdrop-filter: blur(10px); /* The frosted glass blur effect */
        border: 1px solid rgba(255, 255, 255, 0.3); /* A subtle border */
        border-radius: 1rem; /* Rounded corners */
        padding: 2rem; /* Some space inside the box */
        text-align: center; /* Center the text */
        color: white; /* Make the text white */
    }
    .glass-container h3 {
        font-weight: 600; /* Bolder heading */
    }
    .glass-container p {
        font-size: 1.1rem; /* Slightly larger paragraph text */
        opacity: 0.9; /* Slightly transparent text */
        margin-bottom: 0;
    }
</style>

<div class="container my-5">
    <div class="row">
        <div class="col-12 glass-container">
            <h3><%= name %>'s Liked Listings</h3>
            <p>All the places you've saved in one spot!</p>
        </div>
    </div>
    
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <% if (likedListings && likedListings.length > 0) { %>
            <% for(let listing of likedListings) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <div class="card listing-card h-100">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= listing.title %></b><br>
                                    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-12 glass-container mt-3">
                <p>You haven't liked any listings yet. Start exploring to save your favorites!</p>
            </div>
        <% } %>
    </div>
</div>