<% layout('/layouts/boilerplate') %>

<style>
    /* Modern Glass Container - Matching Navbar Design */
    .glass-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        color: var(--text-primary, #2d3748);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    [data-theme="dark"] .glass-container {
        background: rgba(30, 30, 30, 0.95);
        border-color: rgba(255, 255, 255, 0.1);
        color: var(--text-primary, white);
    }
    
    .glass-container h3 {
        font-weight: 700;
        color: #fe424d;
        margin-bottom: 1rem;
    }
    
    .glass-container p {
        font-size: 1.1rem;
        color: var(--text-secondary, #666666);
        margin-bottom: 0;
    }

    /* Modern Card Design */
    .card-img-container {
        height: 15rem;
        overflow: hidden;
        border-radius: 1rem 1rem 0 0;
    }

    .card-img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .listing-card {
        border: none !important;
        border-radius: 1.2rem !important;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: relative;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    [data-theme="dark"] .listing-card {
        background: rgba(30, 30, 30, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
    }

    .listing-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15);
    }

    .listing-card:hover .card-img-container img {
        transform: scale(1.05);
    }

    /* Modern Card Body */
    .listing-card .card-body {
        padding: 1.25rem;
        background: transparent;
    }

    .listing-card .card-text b {
        color: var(--text-primary, #2d3748);
        font-weight: 600;
        font-size: 1.1rem;
        display: block;
        margin-bottom: 0.5rem;
    }

    .listing-card .card-text {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-secondary, #666666);
    }
</style>

<div class="container my-5">
    <div class="row">
        <div class="col-12 glass-container">
            <h3><%= name %>'s Liked Listings</h3>
            <p>All the places you've saved in one spot!</p>
        </div>
    </div>
    
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <% if (likedListings && likedListings.length > 0) { %>
            <% for(let listing of likedListings) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <div class="card listing-card h-100">
                            
                            <div class="card-img-container">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
</div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= listing.title %></b><br>
                                    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-12 glass-container mt-3">
                <p>You haven't liked any listings yet. Start exploring to save your favorites!</p>
            </div>
        <% } %>
    </div>
</div>