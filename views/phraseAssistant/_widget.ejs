<div id="phrase-assistant-widget" class="card mb-4" data-default-lang="">
  <div class="card-body">
    <h5 class="card-title">Local Language Assistant</h5>

    <div class="mb-2">
      <label class="form-label">Phrase (English)</label>
      <input id="phrase-input" class="form-control" placeholder="Where is the nearest pharmacy?">
    </div>

    <div class="mb-2 row">
      <div class="col-md-6">
        <label class="form-label">Target language (ISO code)</label>
        <input id="phrase-target" class="form-control" placeholder="hi, ja, es">
      </div>
      <div class="col-md-6">
        <label class="form-label">Category</label>
        <select id="phrase-category" class="form-control">
          <option value="general">General</option>
          <option value="directions">Directions</option>
          <option value="dining">Dining</option>
          <option value="emergency">Emergency</option>
          <option value="etiquette">Etiquette</option>
        </select>
      </div>
    </div>

    <div class="d-flex gap-2">
      <button id="translate-btn" class="btn btn-primary">Translate</button>
      <button id="tts-btn" class="btn btn-outline-secondary">Play (TTS)</button>
      <button id="save-btn" class="btn btn-success">Save to Favorites</button>
    </div>

    <div id="results" class="card mt-3">
      <div class="card-body">
        <h6>Translation</h6>
        <p id="translated-text" class="lead"></p>
        <p id="transliteration" class="text-muted small"></p>
      </div>
    </div>

    <div class="mt-3">
      <h6>Favorites</h6>
      <ul id="favorites-list" class="list-group"></ul>
    </div>
  </div>
</div>
