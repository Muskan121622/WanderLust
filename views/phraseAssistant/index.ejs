<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <h1><%= title %></h1>

  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Translate Custom Phrase</h5>

          <div class="mb-3">
            <label for="custom-phrase" class="form-label">Enter your phrase in English</label>
            <input type="text" id="custom-phrase" class="form-control" placeholder="e.g., Where is the nearest pharmacy?">
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="custom-target" class="form-label">Target Language (ISO code)</label>
              <input type="text" id="custom-target" class="form-control" placeholder="e.g., hi, ja, es">
            </div>
            <div class="col-md-6">
              <label for="custom-category" class="form-label">Category</label>
              <select id="custom-category" class="form-control">
                <option value="general">General</option>
                <option value="directions">Directions</option>
                <option value="dining">Dining</option>
                <option value="emergency">Emergency</option>
                <option value="etiquette">Etiquette</option>
              </select>
            </div>
          </div>

          <button id="custom-translate-btn" class="btn btn-primary">Translate</button>

          <div id="custom-result" class="mt-3" style="display: none;">
            <div class="card">
              <div class="card-body">
                <h6>Translation</h6>
                <p id="custom-translated-text" class="lead"></p>
                <p id="custom-transliteration" class="text-muted small"></p>
                <button id="custom-tts-btn" class="btn btn-outline-secondary btn-sm">Play Audio</button>
                <button id="custom-save-btn" class="btn btn-success btn-sm">Save to Favorites</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Quick Phrases</h5>
          <p>Select a category and language to see common phrases.</p>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="quick-category" class="form-label">Category</label>
              <select id="quick-category" class="form-control">
                <option value="greetings">Greetings</option>
                <option value="directions">Directions</option>
                <option value="dining">Dining</option>
                <option value="emergency">Emergency</option>
                <option value="etiquette">Etiquette</option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="quick-lang" class="form-label">Language</label>
              <input type="text" id="quick-lang" class="form-control" placeholder="e.g., hi, ja, es">
            </div>
          </div>

          <button id="load-quick-btn" class="btn btn-secondary">Load Phrases</button>

          <div id="quick-phrases" class="mt-3"></div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">My Travel Phrases</h5>
          <div id="favorites-list"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/JS/phraseAssistant.js"></script>
